<h1>The People</h1>

<table>
    <thead>
        <th>Name</th>
        <th>Email</th>
    </thead>
    <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user), :class => "label" %></td> 
        <td><%= link_to 'Destroy', user_path(user),
              method: :delete, :class => "label",
              data: { confirm: 'Are you sure?' } %></td> 
      </tr>
     <% end %>
    </tbody>
</table>

 <%= link_to "Be somebody", new_user_path, :class => "button" %>
